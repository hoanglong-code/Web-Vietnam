@model WEB_ENGLISH.Areas.Admin.Data.DTO.Class2
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        * {
            margin: 0;
        }

        .bgr-img {
            width: 100%;
            height: 750px;
            text-align: center;
            background-color: #00483d;
            /* border: 2px solid red; */
        }

        .contaiiner {
            width: 25%;
            height: 600px;
            background-color: white;
            float: right;
            margin-top: 80px;
            margin-right: 100px;
            display: block;
            border-radius: 10px;
        }

        .login-title {
            padding: 10px;
            /* background-color: green; */
            text-align: center;
            font-size: 24px;
            font-weight: bolder;
            border-bottom: 2px solid #18bba5;
        }

        .username {
            margin-top: 50px;
            padding: 10px;
            border-radius: 17px;
            text-align: center;
            outline: none;
        }

        .password {
            margin-top: 50px;
            padding: 10px;
            border-radius: 17px;
            text-align: center;
            outline: none;
        }

        .login-button {
            margin-top: 50px;
            margin-bottom: 25px;
            text-align: center;
            padding: 10px 50px;
            background-color: #00483d;
            color: white;
            border-radius: 16px;
            outline: none;
            cursor: pointer;
        }

        .input-login-button {
            font-weight: bolder;
        }

        .login-button:hover {
            background-color: #18bba5;
        }

        .resetpass {
            float: left;
            padding: 10px;
            color: #00483d;
            text-decoration: none;
        }

            .resetpass:hover {
                border-bottom: 2px solid #18bba5;
            }

        .createaccount {
            float: right;
            padding: 10px;
            color: #00483d;
            text-decoration: none;
        }

        .txt-resetpass {
            font-size: 18px;
        }

        .txt-create-account {
            font-size: 18px;
        }

        .createaccount:hover {
            border-bottom: 2px solid #18bba5;
        }

        .panda-logo {
            position: absolute;
            bottom: 250px;
            left: 330px;
            opacity: 0.5;
            outline: none;
        }
    </style>
</head>
<body>
    <div class="bgr-img">
        <div class="contaiiner">
            <div class="panda-logo">
            </div>
            <span class="login-title">Sign in</span>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, null, new { @class = "text-danger" })
                <div class="username">
                    @Html.TextBoxFor(x => x.UserName, htmlAttributes: new { @class = "form-control", @placeholder = "Tài khoản" })
                    @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "text-danger" })
                </div>
                <div class="password">
                    @Html.TextBoxFor(x => x.Passwords, htmlAttributes: new { @class = "form-control", @placeholder = "Mật khẩu", @type = "password" })
                    @Html.ValidationMessageFor(x => x.Passwords, "", new { @class = "text-danger" })
                </div>
                <button type="submit" class="login-button" aria-setsize="30"><span class="input-login-button" onclick="alert('Đăng nhập thành công')">LOG IN</span></button>
                <p class="text-muted text-center">
                    <small>Do not have an account?</small>
                </p>
                <a class="btn btn-sm btn-white btn-block" href="#">Create an account</a>
            }
        </div>
    </div>
</body>
</html>




