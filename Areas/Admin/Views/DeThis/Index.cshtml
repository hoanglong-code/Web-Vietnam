@model IEnumerable<WEB_ENGLISH.Models.DeThi>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div class="col-lg-6" style="margin-left:248px;margin-top:-30px">
    <div class="card" style="width:1100px;">
        <p style="margin-left:990px;margin-top:20px">
            @Html.ActionLink("Create New", "Create")
        </p>
        <div class="card-body">
            <div class="card-title">
                <h4>Table Images</h4>
            </div>
            <div class="table-responsive">
                <table class="table table-striped">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.NgayThi)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ThoiGianThi)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SoLuongCauHoi)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NgayThi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ThoiGianThi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SoLuongCauHoi)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>
