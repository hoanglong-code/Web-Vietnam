@model List<WEB_ENGLISH.Models.DeThi>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/Areas/User/Assets/css/font-awesome.min.css">
<div class="viewcat">
    <h1 class="hidden-xs hidden-sm">Exam</h1>
    <hr style="margin-top: 0;">
    <div class="test viewlist">       
        <div class="panel panel-default">
            @foreach (var item in Model)
            {
                <div class="panel-body">                  
                        <h2>
                                <a href="../Test/Index?MaDeThi=@item.Id" title="TOEFL READING- PRACTICE 1"><strong>Đề @item.Id</strong></a>
                            </h2>                    
                        <ul class="exam-info css-exam-info list-inline form-tooltip">
                            <li class="pointer" data-toggle="tooltip" data-original-title="Số câu"><em class="fa fa-heart-o">&nbsp;</em>Ngay Thi : @item.NgayThi<span class="hidden-xs"></span></li>
                            <li class="pointer" data-toggle="tooltip" data-original-title="Thời gian"><em class="fa fa-clock-o">&nbsp;</em>Thoi Gian Thi :@item.ThoiGianThi<span class="hidden-xs"></span></li>
                        </ul>
                        <ul class="list-inline help-block">
                            <li><em class="fa fa-clock-o">&nbsp;</em>Số lượng câu hỏi: 5</li>
                            <li><em class="fa fa-search">&nbsp;</em>Đã xem: 15</li>
                            <li><em class="fa fa-comment-o">&nbsp;</em>Bình luận: 0</li>
                        </ul>
                        <div class="col-lg-12 col-xs-12 col-sm-12 col-md-8 text-left m-bottom">
                            <button href="../Test/Index?MaDeThi=@item.Id" class="btn btn-primary col-lg-24 col-xs-24" style="margin-top: 5px;">
                                    Bắt Đầu Làm Bài </button>
                        </div>
                    </div>
            }
        </div>        
    </div>
</div>

